<div id="main-body" class="row">
    <div class="col m-4 p-4">
        <form>
            <div class="form-group">
                <label for="exampleInputEmail1">git repo link</label>
                <input type="text" class="form-control" id="gitlink" aria-describedby="emailHelp" placeholder="Create a github repo and paste link here">
                <small id="githelp" class="form-text text-muted">Recomendation: Create a new empty repo</small>
            </div>

            <div class="form-group mt-4">
                <div class="row">
                    <label for="date-init" class="col col-form-label">Initial date</label>
                    <label for="date-final" class="col col-form-label">Final date</label>
                </div>
                <div class="row">
                    <div class="col">
                        <input class="form-control" type="date" value="2019-07-01" id="date-init">
                    </div>
                    <div class="col">
                        <input class="form-control" type="date" value="2020-07-01" id="date-final">
                    </div>
                </div>
            </div>

            <div class="form-group mt-4">
                <label for="example-date-input" class="col-form-label">Days of week</label>
                <div class="row mt-4">
                    <div class="col custom-control custom-checkbox ml-4">
                    <input type="checkbox" class="custom-control-input" id="check1" checked>
                    <label class="custom-control-label" for="check1">Mon.</label>
                </div>
                <div class="col custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="check2" checked>
                    <label class="custom-control-label" for="check2">Tues.</label>
                </div>
                <div class="col custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="check3" checked>
                    <label class="custom-control-label" for="check3">Wed.</label>
                </div>
                <div class="col custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="check4" checked>
                    <label class="custom-control-label" for="check4">Thurs.</label>
                </div>
                <div class="col custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="check5" checked>
                    <label class="custom-control-label" for="check5">Fri.</label>
                </div>
                <div class="col custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="check6">
                    <label class="custom-control-label" for="check6">Sat.</label>
                </div>
                <div class="col custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="check7">
                    <label class="custom-control-label" for="check7">Sun.</label>
                </div>    
                </div>
            </div>

            <div class="form-group mt-4">
                <div class="form-group row">
                    <label class="col" for="activityrange">Activity <small class="form-text text-muted">Max commits per day. (Random range)</small></label>
                    
                </div>
                <div class="row">
                    <label class="col-1" for="activityrange">1</label>
                    <input type="range" class="custom-range col-10" min="1" max="15" id="activityrange" value="3">
                    <label class="col-1" for="activityrange">15</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary col align-self-center mt-4">Submit</button>
        </form>
    </div>

    <div class="col m-4">
        <h3>Your github chart will end up looking like this</h3>
        <div id="drawing" class="mt-4">

        </div>
        <div class="row">
            <div class="col-12 d-flex justify-content-center text-center mt-4">
                <%= fa_icon 'arrow-down 5x' %>
            </div>
            <div class="col">
                <button type="submit" class="btn btn-primary col align-self-center mt-4">Create file</button>
            </div>
        </div>
        
    </div>
</div>
